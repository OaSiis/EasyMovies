{% extends 'base.html.twig' %}

{% block body %}
    <h1>Actor list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for actor in actors %}
            <tr>
                <td><a href="{{ path('actor_show', { 'id': actor.id }) }}">{{ actor.id }}</a></td>
                <td>{{ actor.firstname }}</td>
                <td>{{ actor.lastname }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('actor_show', { 'id': actor.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('actor_edit', { 'id': actor.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('actor_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
